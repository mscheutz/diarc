{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      /* 
        - configured so that shadcn UI installs packages into the right folder 
        - please do not touch unless absolutely sure that you have to! 
      */
      "@/*": [
        "./src/@/components/"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/app"
  ]
}